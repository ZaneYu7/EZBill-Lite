<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.EzBill">


    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.example.EzBill.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.My_Application"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
        <activity
            android:name="com.example.EzBill.ui.activity.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.ForgotPassword"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.ElectricityActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.BluetoothActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.RoommateActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.FinanceActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.SettingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EzBill.ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.EzBill.ui.activity.ControlActivity" />
    </application>

</manifest>